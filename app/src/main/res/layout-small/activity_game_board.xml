            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="1dp" />
        <Button
